<%- include("../partials/head.ejs") %>
<%- include("../partials/navigation.ejs") %>
    <main>
        <h2>Add a Product</h2>
        <form action="/admin/product" method="POST">
            <div class="form-group">
                <label for="title" class="mb-3">Title</label><br>
                <input type="text" placeholder="Enter Product Name" id="title" name="title"><br>
            </div>

            <div class="form-group">
                <label for="description" class="mb-3">Description</label><br>
                <textarea name="description" id="description" cols="30" rows="10"></textarea>
            </div>

            <div class="form-group">
                <label for="imageURL" class="mb-3">Image URL</label><br>
                <input type="text" id="imageURL" placeholder="Enter Image URL" name="imageURL"><br>
            </div>

            <div class="form-group">
                <label for="price" class="mb-3">Price</label><br>
                <input type="number" id="price" placeholder="Enter Price" name="price" step="0.01"><br>
            </div>

            <button type="submit">Add Product</button>
        </form>
    </main>
<%- include("../partials/end.ejs") %> 